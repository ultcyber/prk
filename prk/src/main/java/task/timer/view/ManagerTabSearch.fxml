<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="task.timer.view.ManagerTabSearchController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#21ff302c" height="570.0" layoutX="10.0" layoutY="20.0" stroke="BLACK" strokeType="INSIDE" width="740.0" />
      <VBox layoutX="10.0" layoutY="20.0" prefHeight="575.0" prefWidth="740.0">
         <children>
            <HBox prefHeight="42.0" prefWidth="720.0">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#readData" prefHeight="40.0" prefWidth="120.0" text="Odśwież dane" textAlignment="CENTER" />
                  <Label text="Przeszukiwanie bazy">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="63.0" prefWidth="720.0" spacing="10.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="64.0" prefWidth="171.0">
                     <children>
                        <Label text="Pracownicy" />
                        <ChoiceBox fx:id="chooseUser" prefWidth="150.0" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="64.0" prefWidth="171.0">
                     <children>
                        <Label text="Projekty" />
                        <ChoiceBox fx:id="chooseProject" prefWidth="150.0" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="64.0" prefWidth="140.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="121.0" text="Data początkowa" />
                        <DatePicker fx:id="date" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="64.0" prefWidth="140.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="118.0" text="Data końcowa" />
                        <DatePicker fx:id="dateEnd" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#searchAndShowRecords" prefHeight="50.0" prefWidth="120.0" text="Szukaj" />
               </children>
            </HBox>
            <TableView fx:id="recordTable" prefHeight="351.0" prefWidth="720.0">
              <columns>
                  <TableColumn fx:id="userNameColumn" prefWidth="75.0" text="Pracownik" />
                <TableColumn fx:id="projectNameColumn" prefWidth="123.0" text="Projekt" />
                  <TableColumn fx:id="descriptionColumn" prefWidth="180.0" resizable="false" text="Opis" />
                  <TableColumn fx:id="dateColumn" prefWidth="63.0" text="Data" />
                <TableColumn prefWidth="160.0" resizable="false" text="Czas pracy">
                     <columns>
                        <TableColumn fx:id="startTimeColumn" resizable="false" text="Początek" />
                        <TableColumn fx:id="stopTimeColumn" resizable="false" text="Koniec" />
                     </columns>
                  </TableColumn>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <TableView fx:id="totalTimeTable" nodeOrientation="RIGHT_TO_LEFT" prefHeight="94.0" prefWidth="720.0">
              <columns>
                <TableColumn prefWidth="188.0" text="Łączny czas">
                     <columns>
                        <TableColumn fx:id="minutesTotalColumn" prefWidth="74.0" text="Minuty" />
                        <TableColumn fx:id="hoursTotalColumn" minWidth="0.0" prefWidth="76.0" text="Godziny" />
                     </columns>
                  </TableColumn>
              </columns>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
