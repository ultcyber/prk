                           <children>
                              <Button mnemonicParsing="false" onAction="#updateUser" text="Aktualizuj dane">
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#addUser" text="Zapisz jako nowy">
